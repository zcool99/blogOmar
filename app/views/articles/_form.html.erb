<% name ||= "Crear Articulo" %>
<h1><%= name %></h1>
<%= form_for(@article) do |f| %>

		<% @article.errors.full_messages.each do |message| %>
			<div class="be-blue white top-space">
			* <%= message %>
			</div>
		<%end%>	
		<div class="field">
		<%= f.text_field :title, placeholder: "Titulo", class:"form-control" %>
		</div>
		<div class="field">
		<p>Portada: <%= f.file_field :cover %></p>
		</div>

		<div class="field">
		<%= f.text_area :body, placeholder: "Escribe aqui tu articulo", style: "height:200px;", class:"form-control"%>
		</div>

		<div class="field">
		<label>Categorias:</label>
		<% @categories.each do |category| %>
		<div class="field">
			<%= check_box_tag "categories[]", category.id %> <%= category.name %>
		<%end%>
		</div>
		</div>

		<div class="field">
		<%= f.submit "Guardar", class:"btn be-blue white"%>
		</div>
<% end %>